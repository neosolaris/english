#!/bin/sh

GTTS="gtts"
OUT="README.md"

# make tts files
echo "[ MAKE TTS FILES ]"
$GTTS

echo "[ MAKE LIST FILES ]"
echo > $OUT
for file in *.txt
do
	fname=`echo $file | sed 's/.txt//'`
	echo "* [${fname}](${fname}.mp3)  " >> $OUT
	cat $file >> $OUT
done

git add .
git commit -m "update files" .
git push
